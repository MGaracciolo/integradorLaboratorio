doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title examenes 
    link(rel="stylesheet", href="/stylesheets/style.css")
    
  body
    #cabecera
      img(src='/images/banner.png', alt='Logo del laboratorio')
    #botones
      button#botonAgregarPaciente.custom-button Agregar Paciente
      button#botonBuscarPaciente.custom-button Buscar Paciente
      button#botonInicio.custom-button Inicio
      button.custom-button Orden de Trabajo     
      button.custom-button Salir

   
    h2 Nuevo Exámen

    #contenedorformularioExamenes 
        form#formularioPaciente(style='display: block;', action='/rutaExamenes/agregarExamen', method='post')
          p
            | Nombre del Examen:
            input(type='text', name='nombreExamen', placeholder='Ingrese el nombre del examen')
          p
            | Determinaciones 
          p
            | nombre de la Determinacion
            input(type='text', name='nombreDeterminacion', placeholder='Ingrese el nombre de la determinacion')
         
          p
            | valores de Referencia: 
          p
            | minimo
            input(type='text', name='minimo', placeholder='Ingrese el valor mínimo')
          p
            | máximo
            input(type='text', name='maximo', placeholder='Ingrese el valor maximo')
          p
            | unidad de medida
            input(type='text', name='unidadMedida', placeholder='Ingrese la unidad de medida')            
          p
            | muestras: 
            //input(type='text', name='muestras', placeholder='Ingrese las muestras requeridas')
            label(for="muestras") 
            select(id="muestras", name="muestras")
                option(value="sangre") sangre
                option(value="orina") orina
                option(value="materia fecal") materia fecal

          button#botonAgregarExamen(type='submit') Agregar Nuevo Exámen








